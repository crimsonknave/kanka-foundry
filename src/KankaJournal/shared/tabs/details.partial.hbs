{{#if image}}
    {{#if settings.imageInText}}
        <img class="kanka-main-image" src="{{image}}">
    {{/if}}
{{/if}}

<dl class="grid">
    {{~> @partial-block~}}
    {{~#with (kankaSortBy (kankaFilterBy (kankaFilterAccessible entity.attributes) 'is_star' true) 'default_order') as | starred |~}}
        {{~#unless (kankaIsOneOf starred.[0].type 'section')~}}
            <dt class="section">{{kankaLocalize 'journal' 'shared' 'labels' 'attributes'}}</dt>
        {{~/unless~}}
        {{~#each starred ~}}
            {{~>attributeEntry attribute=this~}}
        {{~/each~}}
    {{~/with~}}
</dl>

{{#if entity.entry_parsed }}
    {{ kankaReplaceMentions entity.entry_parsed }}
{{/if}}

{{>pinnedNotes entity=entity}}